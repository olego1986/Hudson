            <form asp-action="Callback" asp-controller="Home" method="post">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>Замовити дзвінок</h3>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <label for="name">Вашe ім'я:</label>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Введіть як до Вас звертатися" id="name" name="name" value="@Model.Name" />
                        </div>
                        <label for="phoneNumber">Ваш номер телефону:</label>
